---
import Layout from '../../layouts/Layout.astro';
import { format } from 'date-fns';

const posts = await Astro.glob('../../content/blog/*.md');
---

<Layout title="Vaporwave Vault Blog" description="Articles and interviews about obscure vaporwave artists.">
  <section class="py-8">
    <h1 class="text-3xl font-bold mb-6 text-center text-vaporwave-pink">Vaporwave Vault Blog</h1>
    <ul class="space-y-4">
      {posts.map((post) => (
        <li class="bg-gray-800 rounded-lg shadow-md p-4">
          <a href={post.url} class="block hover:text-vaporwave-blue">
            <h2 class="text-xl font-semibold mb-2">{post.frontmatter.title}</h2>
            <p class="text-gray-500">Published: {format(new Date(post.frontmatter.pubDate), 'MMMM dd, yyyy')}</p>
            <p class="text-gray-400">{post.frontmatter.description}</p>
          </a>
        </li>
      ))}
    </ul>
  </section>
</Layout>
